<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg3">

<RelativeLayout
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="600dp" >

    <TextView
        android:id="@+id/tV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Admin Registration"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/eT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eT3"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tV1"
        android:layout_marginTop="15dp"
        android:ems="10" />

    <requestFocus />

    <EditText
        android:id="@+id/eT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/eT1"
        android:layout_toRightOf="@+id/textV3"
        android:ems="10"
        android:inputType="textPassword" >
    </EditText>

    <EditText
        android:id="@+id/eT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/eT2"
        android:layout_toRightOf="@+id/textV3"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eT2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="User ID:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/eT4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/eT3"
        android:layout_toRightOf="@+id/textV3"
        android:ems="10" />

    <TextView
        android:id="@+id/textV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eT4"
        android:layout_alignLeft="@+id/textV1"
        android:text="User Name:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eT4"
        android:layout_alignLeft="@+id/textV4"
        android:text="Confirm Password:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eT3"
        android:layout_alignLeft="@+id/textV3"
        android:text="Password:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/eT6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textV6"
        android:layout_alignLeft="@+id/eT4"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <Button
        android:id="@+id/B1"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@+id/eT6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#87CEEB"
        android:text="Register" />

    <TextView
        android:id="@+id/textV6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textV4"
        android:layout_below="@+id/textV4"
        android:layout_marginTop="17dp"
        android:text="Mobile Number:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>

</ScrollView>